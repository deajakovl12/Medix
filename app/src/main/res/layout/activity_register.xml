<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#efefef"
    >
    <TextView
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:text="Ime"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#434343"
        android:id="@+id/etIme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:text="Prezime"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#434343"
        android:id="@+id/etPrezime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:text="Email"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#434343"
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:text="Lozinka"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#434343"
        android:id="@+id/etLozinka"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:text="OIB"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#434343"
        android:id="@+id/etOIB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:text="Telefon"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#434343"
        android:id="@+id/etTelefon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:text="Adresa ordinacije"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#434343"
        android:id="@+id/etAdresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:background="#A22022"
        android:textColor="@android:color/background_light"
        android:id="@+id/bRegistracija"
        android:text="Registriraj se"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />


</LinearLayout>
