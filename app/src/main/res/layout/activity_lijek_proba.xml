<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deean.medix.LijekProba"
    android:orientation="vertical">

    <TextView
        android:textColor="#A22022"
        android:id="@+id/etNaziv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_marginBottom="10dp"

        android:textColor="#A22022"
        android:id="@+id/etSastav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginBottom="10dp"

        android:textColor="#A22022"
        android:id="@+id/etNamjena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginBottom="10dp"

        android:textColor="#A22022"
        android:id="@+id/etPakovanje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginBottom="10dp"

        android:textColor="#A22022"
        android:id="@+id/etIme_i_adresa_proizvodaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView        android:layout_marginBottom="10dp"

        android:textColor="#A22022"
        android:id="@+id/etKada_ne_smije_primjeniti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginBottom="10dp"

        android:textColor="#A22022"
        android:id="@+id/etDoziranje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginBottom="10dp"

        android:textColor="#A22022"
        android:id="@+id/etNuspojave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/bDohvati"
        android:text="Dohvati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
