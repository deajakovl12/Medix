<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#efefef"
    >
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/logo1"/>
    <TextView
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:text="Email"
        android:layout_height="wrap_content" />
    <EditText
        android:theme="@style/Boja_EditText"
        android:textColor="#434343"
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#434343"
        android:layout_width="wrap_content"
        android:text="Lozinka"
        android:layout_height="wrap_content" />
    <EditText
        android:theme="@style/Boja_EditText"
        android:textColor="#434343"
        android:id="@+id/etLozinka"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#434343"
        android:id="@+id/tvRegistracijaLink"
        android:layout_width="wrap_content"
        android:text="Registiriraj se ovdje"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#434343"
        android:id="@+id/tvLozinkaLink"
        android:layout_width="wrap_content"
        android:text="Zaboravili ste lozinku?"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <Button
        android:background="#A22022"
        android:textColor="@android:color/background_light"
        android:id="@+id/bPrijava"
        android:text="Prijava"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>
